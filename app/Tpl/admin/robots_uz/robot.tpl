<!--阿里妈妈筛选采集-->
<div class="pad_lr_10" >
    <div class="J_tablelist table_list">
        <table width="100%" cellspacing="0">
            <thead>
            <tr>
                <th width="40">ID</th>
                <th align="left">{:L('tbk_item_info')}</th>
                <th align="right">{:L('tbk_item_price')}</th>
                <th align="right">{:L('tbk_item_commission')}</th>
                <th align="right">{:L('tbk_item_commission_rate')}</th>
                <th align="right">{:L('tbk_item_commission_num')}</th>
                <th align="right">{:L('tbk_item_commission_volume')}</th>
                <th align="right">{:L('tbk_item_volume')}</th>
				<th align="right">信息</th>
            </tr>
            </thead>
            <tbody>
            <volist name="list" id="val">
            <tr>
                <td align="center"> </td>
                <td>
                    <div>
                        <a href="{$val.click_url}" target="_blank">{$val.title}</a><br/>
                    </div>
                </td>
                <td align="right">{$val.price}{:L('price_unit')}</td>
                <td align="right">{$val.commission}{:L('price_unit')}</td>
                <td align="right">{$val['commission_rate']/100}%</td>
                <td align="right">{$val.commission_num}{:L('item_unit')}</td>
                <td align="right">{$val.commission_volume}{:L('price_unit')}</td>
                <td align="right">{$val.volume}{:L('item_unit')}</td>
				<td align="right"><font color="blue">{$val.msg}</font></td>
            </tr>
            </volist>
            </tbody>
        </table>
    </div>
    <div class="btn_wrap_fixed">
        <div id="pages">{$page}</div>
    </div>
</div>
<script src="__STATIC__/js/jquery/jquery.js"></script>
<script src="__STATIC__/js/jquery/plugins/jquery.tools.min.js"></script>
