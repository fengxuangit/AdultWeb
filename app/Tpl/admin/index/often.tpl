<include file="public:header" />
<div class="pad-10">
	<form id="myform" name="myform" action="{:U('index/often_menu')}" method="post">
    <table class="table_map">
        <volist name="list" id="val">
    	<tr>
        	<th align="center">{:L($val['name'])}</th>
            <td>
            	<table class="table_map_sub">
                    <present name="val['sub']">
                    <volist name="val['sub']" id="sval">
                	<tr>
                    	<th>{:L($sval['name'])}</th>
                        <td>
                        <present name="sval['sub']">
                        <volist name="sval['sub']" id="ssval">
                        <label><input type="checkbox" <if condition="$ssval['often'] eq 1">checked="checked"</if> name="id[]" value="{$ssval.id}" />{:L($ssval['name'])}</label>
                        </volist>
                        </present>
                        </td>
                    </tr>
                	</volist>
                    </present>
                </table>
            </td>
        </tr>
        </volist>
    </table>
    <div class="bk15"></div>
    <div class="btn"><input type="submit" value="{$Think.lang.submit}" name="do" class="button" id="do"></div>
    </form>
</div>
</body>
</html>